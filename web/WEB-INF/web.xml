<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>MyPack.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>MyPack.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payment</servlet-name>
        <servlet-class>MyPack.payment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFlightServlet</servlet-name>
        <servlet-class>MyPack.AddFlightServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookedListServlet</servlet-name>
        <servlet-class>MyPack.BookedListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookTicketServlet</servlet-name>
        <servlet-class>MyPack.BookTicketServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookTicketServletUpdate</servlet-name>
        <servlet-class>MyPack.BookTicketServletUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <servlet-class>MyPack.ConfirmBookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>paymentupdate</servlet-name>
        <servlet-class>MyPack.paymentupdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payment</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFlightServlet</servlet-name>
        <url-pattern>/AddFlightServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookedListServlet</servlet-name>
        <url-pattern>/BookedListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookTicketServlet</servlet-name>
        <url-pattern>/BookTicketServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookTicketServletUpdate</servlet-name>
        <url-pattern>/BookTicketServletUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <url-pattern>/ConfirmBookingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>paymentupdate</servlet-name>
        <url-pattern>/paymentupdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
